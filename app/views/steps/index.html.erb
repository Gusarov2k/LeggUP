<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Decision</th>
        <th scope="col">Show</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @steps.each do |c| %>
        <tr>
          <td><%= c.decision %></td>
          <td><%= link_to 'Show', step_path(c) %></td>
          <td><%= link_to 'Edit', edit_step_path(c) %></td>
          <td><%= link_to 'Delete', step_path(c), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
