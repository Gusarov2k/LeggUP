<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Show</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @problems.each do |c| %>
        <tr>
          <td><%= c.title %></td>
          <td><%= link_to 'Show', problem_path(c) %></td>
          <td><%= link_to 'Edit', edit_problem_path(c) %></td>
          <td><%= link_to 'Delete', problem_path(c), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
